<% if user_signed_in? %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        <%= link_to "Create Event", new_user_event_path(current_user.id) %>
    <% else %>
        <%= link_to "Sign Up", new_user_registration_path %>
        <%= link_to "Log In", new_user_session_path,  data: { turbo: "false" } %>
<% end %>
<div> <%= current_user.name%> <%= current_user.id%></div>
<h2>List of all events taking place</h2> 
<div>Past Events</div>
<% @events.past_events.each do |event| %>
  
    <%= render event %>
    <% if user_signed_in? %>
        <%= link_to 'Event', user_event_path(current_user.id, event.id)%>
    <% end %>

<% end %>
<div>Upcoming Events</div>
<% @events.upcoming_events.each do |event| %>
    <%= render event %>
    <% if user_signed_in? %>
        <%= link_to 'Event', user_event_path(current_user.id, event.id)%>
    <% end %>
<% end %>