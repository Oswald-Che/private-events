<!DOCTYPE html>
<html>
  <head>
    <title>Private Events</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= stylesheet_link_tag 'layout-header'%>
    <div class="header">
        <div class="header-name">
            <%= link_to 'Private Event', root_path%>
        </div>
        <div class="links">
            <ul>
                <% if user_signed_in? %>
                    <li> <%= link_to "#{current_user.name.capitalize}", user_path(current_user) %> </li>
                    <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
                    <li><%= link_to "Create Event", new_event_path %></li>
                <% else %>
                    <li><%= link_to "Sign Up", new_user_registration_path %></li>
                    <li><%= link_to "Log In", new_user_session_path,  data: { turbo: "false" } %></li>
                <% end %>
            </ul>
        </div>
    </div>
    <%= yield %>
  </body>
</html>
